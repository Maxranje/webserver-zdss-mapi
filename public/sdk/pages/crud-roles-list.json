{
    "type": "page",
    "title": "角色管理",
    "toolbar": [
        {
            "type": "button",
            "actionType": "drawer",
            "label": "新增",
            "className": "m-r-sm",
            "primary": true,
            "drawer": {
                "position": "right",
                "size": "lg",
                "title": "新增角色",
                "body": {
                    "type": "form",
                    "name": "role-new-form",
                    "api": {
                        "method": "post",
                        "url": "/mapi/roles/create",
                        "dataType": "form"
                    },
                    "onEvent": {
                        "click": {
                            "actions": [
                                {
                                    "actionType": "reload",
                                    "componentId": "roles_list"
                                }
                            ]
                        }
                    },
                    "body": [
                        {
                            "type": "input-text",
                            "name": "name",
                            "label": "角色名",
                            "required": true
                        },
                        {
                            "type": "divider"
                        },
                        {
                            "type": "input-text",
                            "name": "descs",
                            "label": "描述"
                        }
                    ]
                }
            }
        }
    ],
    "body": {
        "type": "crud",
        "api": "/mapi/roles/lists",
        "syncLocation": false,
        "mode": "cards",
        "switchPerPage": false,
        "placeholder": "没有权限信息",
        "columnsCount": 4,
        "perPageAvailable": [
            10000,
            20000
        ],
        "perPage": 10000,
        "card": {
            "header": {
                "className": "bg-white",
                "title": "$name",
                "subTitle": "",
                "description": "$descs"
            },
            "actions": [
                {
                    "label": "编辑",
                    "actionType": "dialog",
                    "dialog": {
                        "title": null,
                        "size": "lg",
                        "body": {
                            "api": "/mapi/roles/update",
                            "type": "form",
                            "tabs": [
                                {
                                    "title": "基本信息",
                                    "body": [
                                        {
                                            "type": "hidden",
                                            "name": "id"
                                        },
                                        {
                                            "name": "name",
                                            "label": "角色",
                                            "size": "full",
                                            "type": "input-text"
                                        },
                                        {
                                            "type": "divider"
                                        },
                                        {
                                            "name": "descs",
                                            "type": "textarea",
                                            "label": "描述",
                                            "size": "full"
                                        }
                                    ]
                                },
                                {
                                    "title": "角色信息",
                                    "body": [
                                        {
                                            "label": "选择人员",
                                            "name": "uids",
                                            "type": "transfer",
                                            "source": "/mapi/roles/userlists?rid=$id",
                                            "searchable": true,
                                            "searchApi": "/mapi/roles/userlists?nickname=$term&rid=$id",
                                            "selectMode": "list",
                                            "required": true
                                        }
                                    ]
                                },
                                {
                                    "title": "排课页面权限",
                                    "body": [
                                        {
                                            "label": "选择页面",
                                            "name": "page_ids",
                                            "type": "transfer",
                                            "source": "/mapi/roles/pagelists",
                                            "selectMode": "list",
                                            "required": true
                                        }
                                    ]
                                },
                                {
                                    "title": "模考页面权限",
                                    "body": [
                                        {
                                            "label": "选择页面",
                                            "name": "mock_ids",
                                            "type": "transfer",
                                            "source": "/mapi/roles/mocklists",
                                            "selectMode": "list",
                                            "required": true
                                        }
                                    ]
                                },
                                {
                                    "title": "核心权限",
                                    "body": [
                                        {
                                            "label": "选择功能",
                                            "name": "mode_ids",
                                            "type": "transfer",
                                            "menuTpl": "<div class='flex justify-between'><span>${label}</span><span class='text-muted m-r text-sm'>${tag}</span></div>",
                                            "source": "/mapi/roles/modelists",
                                            "selectMode": "list"
                                        }
                                    ]
                                }
                            ]
                        }
                    }
                },
                {
                    "label": "移除",
                    "confirmText": "您确定要移除该角色?",
                    "actionType": "ajax",
                    "api": "/mapi/roles/delete"
                }
            ]
        }
    }
}