{
    "type": "page",
    "title": "消费记录",
    "body": {
        "type": "crud",
        "draggable": true,
        "api": {
            "method": "post",
            "url":"/mapi/records/orderlists",
            "dataType": "form"
        },
        "perPage": 20,
        "syncLocation":false,
        "id" : "records_lists",
        "name" : "records_lists",
        "columnsTogglable": false,
        "labelTpl": "${id}",
        "filter": {
            "title": "条件搜索",
            "submitText": "",
            "body": [
                {
                    "type": "input-text",
                    "name": "nickname",
                    "label": "学员姓名",
                    "size": "md",
                    "placeholder": ""
                },
                {
                    "type": "tree-select",
                    "name": "bpid",
                    "onlyLeaf":true,
                    "label": "生源地",
                    "searchable":true,
                    "size":"md",
                    "initiallyOpen":false,
                    "source": "/mapi/birthplace/lists?is_select=1"
                },
                {
                    "type": "input-date-range",
                    "name": "daterangee",
                    "inline": true,
                    "label": "时间范围"
                },
                {
                    "type": "submit",
                    "label": "搜索"
                }
            ]
        },
        "filterTogglable": true,
        "headerToolbar": [
            "filter-toggler",
            "bulkActions",
            {
                "type": "action",
                "actionType": "download",
                "label": "导出Excel",
                "api": "/mapi/records/orderlists?nickname=${nickname}&daterangee=${daterangee}&is_export=1"
            },
            {
                "type": "tpl",
                "tpl": "共有 ${total} 条数据。",
                "className": "v-middle"
            },
            {
                "type": "columns-toggler",
                "align": "right"
            },
            {
                "type": "drag-toggler",
                "align": "right"
            },
            {
                "type": "pagination",
                "align": "right"
            }
        ],
        "footerToolbar": [
            "statistics",
            "switch-per-page",
            "pagination"
        ],
        "columns": [
            {
                "name": "update_time",
                "label": "日期",
                "type": "text",
                "toggled": true
            },
            {
                "name": "nickname",
                "label": "学员名",
                "type": "text",
                "toggled": true
            },
            {
                "name": "birthplace",
                "label": "生源地",
                "type": "text",
                "toggled": true
            },
            {
                "name": "subject_name",
                "label": "科目",
                "type": "text",
                "toggled": true
            },
            {
                "name": "clasze_name",
                "label": "班型",
                "type": "text",
                "toggled": true
            },
            {
                "name": "isfree",
                "label": "是否免费",
                "type": "text",
                "toggled": true
            },
            {
                "name": "schedule_nums",
                "label": "订单课时",
                "type": "text",
                "toggled": true
            },
            {
                "name": "origin_balance",
                "label": "订单原价",
                "type": "text",
                "toggled": true
            },
            {
                "name": "origin_price",
                "label": "课单价原价",
                "type": "text",
                "toggled": true
            },
            {
                "name": "real_balance",
                "label": "实际缴费",
                "type": "text",
                "toggled": true
            },
            {
                "name": "real_price",
                "label": "惠后单价",
                "type": "text",
                "toggled": true
            },
            {
                "name": "order_state",
                "label": "订单状态",
                "type": "text",
                "toggled": true
            },
            {
                "name": "uncheck_schedule_nums",
                "label": "未消课时",
                "type": "text",
                "toggled": true
            },
            {
                "name": "balance",
                "label": "订单当前余额",
                "type": "text",
                "toggled": true
            },
            {
                "name": "check_schedule_nums",
                "label": "已消课时",
                "type": "text",
                "toggled": true
            },
            {
                "name": "check_schedule_balance",
                "label": "已消金额",
                "type": "text",
                "toggled": true
            },
            {
                "name": "change_duration",
                "label": "结转账户课时",
                "type": "text",
                "toggled": true
            },
            {
                "name": "change_balance",
                "label": "结转账户金额",
                "type": "text",
                "toggled": true
            },
            {
                "type": "container",
                "label" : "备注",
                "popOver": {
                    "body": {
                        "type": "tpl",
                        "tpl": "${remark}"
                    }
                }
            },
            {
                "name": "create_time",
                "label": "创建时间",
                "type": "text",
                "toggled": true
            }
        ]
    }
}