{
    "type": "page",
    "title": "排课列表",
    "body": {
        "type": "crud",
        "draggable": true,
        "name":"schedule_list",
        "api": {
            "method": "post",
            "url":  "/mapi/schedule/lists",
            "dataType": "form"
        },
        "syncLocation":false,
        "id" : "schedule_list",
        "labelTpl": "${id}",
        "filter": {
            "title": "条件搜索",
            "submitText": "",
            "body": [
                {
                    "type": "input-text",
                    "name": "ids",
                    "size":"md",
                    "label": "编号",
                    "placeholder" : "支持多个,用英文逗号分割不要有空格"
                },
                {
                    "type": "tree-select",
                    "name": "group_ids",
                    "onlyLeaf":true,
                    "multiple": true,
                    "searchable":true,
                    "size":"lg",
                    "label": "班级",
                    "source": "/mapi/group/lists?is_select=1"
                },
                {
                    "type": "tree-select",
                    "name": "order_id",
                    "label": "订单",
                    "mode": "inline",
                    "size":"lg",
                    "initiallyOpen":false,
                    "searchable":true,
                    "onlyLeaf":true,
                    "source": "/mapi/student/lists?is_select=1&nickname=$term&is_defer=1",
                    "deferApi": "/mapi/order/lists?is_select=1&student_uid=$value"
                },
                {
                    "type": "tree-select",
                    "name": "teacher_uid",
                    "searchable":true,
                    "onlyLeaf":true,
                    "label": "教师",
                    "size":"md",
                    "source": "/mapi/teacher/lists?is_select=1&is_subject=0"
                },
                {
                    "type": "tree-select",
                    "name": "area_id",
                    "searchable":true,
                    "onlyLeaf":true,
                    "label": "校区",
                    "size":"md",
                    "source": "/mapi/area/lists?is_onlyarea=1"
                },
                {
                    "type": "tree-select",
                    "name": "area_operator",
                    "searchable":true,
                    "onlyLeaf":true,
                    "label": "学管",
                    "size":"md",
                    "source": "/mapi/api/areaoperator"
                },
                {
                    "label": "结算状态",
                    "type": "select",
                    "name": "state",
                    "value" : "0",
                    "options": [
                        {
                            "label": "请选择",
                            "value": "0"
                        },
                        {
                            "label": "已结算",
                            "value": "2"
                        },
                        {
                            "label": "未开始",
                            "value": "1"
                        }
                    ]
                },
                {
                    "type": "input-date-range",
                    "name": "daterange",
                    "inline": true,
                    "label": "时间范围"
                },
                {
                    "type": "submit",
                    "label": "搜索"
                }
            ]
        },
        "filterTogglable": true,
        "bulkActions": [
            {
                "label": "批量删除",
                "actionType": "ajax",
                "api": "/mapi/schedule/delete?ids=$ids",
                "confirmText": "只会删除选择中未结算,已结算会做过滤,确定要批量删除?"
            }
        ],
        "headerToolbar": [
            "filter-toggler",
            "bulkActions",
            {
                "type": "action",
                "actionType": "download",
                "label": "导出Excel",
                "api": "/mapi/schedule/lists?ids=${ids}&group_ids=${group_ids}&teacher_uid=${teacher_uid}&daterange=${daterange}&order_id=${order_id}&area_id=${area_id}&area_operator=${area_operator}&state=${state}&is_export=1"
            },
            {
                "type": "tpl",
                "tpl": "有筛选条件, 需要先搜索后导出, 同时不建议全部导出, 会影响服务性能且很慢, 建议搜索缩小范围, 列表共有 ${total} 条数据。",
                "className": "v-middle"
            },
            {
                "type": "columns-toggler",
                "align": "right"
            },
            {
                "type": "drag-toggler",
                "align": "right"
            },
            {
                "type": "pagination",
                "align": "right"
            }
        ],
        "footerToolbar": [
            "statistics",
            "switch-per-page",
            "pagination"
        ],
        "affixRow": [
            {
              "type": "text",
              "text": "当前页总计时长"
            },
            {
              "type": "text",
              "tpl": "${duration}"
            }
        ],
        "columns": [
            {
                "name": "id",
                "label": "ID",
                "type": "text",
                "toggled": true
            },
            {
                "name": "teacher_name",
                "label": "教师名",
                "type": "text",
                "toggled": true
            },
            {
                "name": "group_name",
                "label": "班级名",
                "type": "text",
                "toggled": true
            },
            {
                "name": "subject_name",
                "label": "课程名",
                "type": "text",
                "toggled": true
            },
            {
                "name": "area_name",
                "label": "校区教室",
                "type": "text",
                "toggled": true
            },
            {
                "name": "operator_name",
                "label": "排课人员",
                "type": "text",
                "toggled": true
            },
            {
                "name": "area_op_name",
                "label": "助教",
                "type": "text",
                "toggled": true
            },
            {
                "name": "birthplace",
                "label": "生源地",
                "type": "text",
                "toggled": true
            },
            {
                "name": "order_count",
                "label": "订单数",
                "type": "text",
                "toggled": true
            },
            {
                "name": "state",
                "label": "状态",
                "type": "mapping",
                "map": {
                    "2": "<span class='label label-danger'>已结算</span>",
                    "1": "<span class='label label-success'>待开始</span>"
                }
            },
            {
                "name": "week_time",
                "label": "星期",
                "type": "text",
                "toggled": true
            },
            {
                "name": "duration",
                "label": "时长",
                "type": "text",
                "toggled": true
            },
            {
                "name": "range_time",
                "label": "时间",
                
                "type": "text",
                "toggled": true
            },
            {
                "name": "create_time",
                "label": "创建时间",
                "type": "text",
                "toggled": false
            },
            {
                "type": "operation",
                "label": "结算",
                "width": 100,
                "buttons": [
                    {
                        "type": "button",
                        "level" : "info",
                        "label" : "点名",
                        "disabledOn": "this.state === 2",
                        "hiddenOn" : "this.order_count <= 1",
                        "actionType": "dialog",
                        "dialog": {
                            "position": "right",
                            "title": "选择未参加课程同学, 进行剔除  (默认为全部结算)",
                            "body": {
                                "type": "form",
                                "name": "dianming-form",
                                "api": {
                                    "method": "post",
                                    "url": "/mapi/schedule/checkoutsingle",
                                    "dataType": "form"
                                },
                                "onEvent": {
                                    "click": {
                                        "actions": [
                                            {
                                            "actionType": "reload",
                                            "componentId": "schedule_list"
                                            }
                                        ]
                                    }
                                },
                                "body":  [
                                    {
                                        "type": "input-text",
                                        "name": "id",
                                        "label": "id",
                                        "hidden": true
                                    },
                                    {
                                        "type": "tree-select",
                                        "name": "filter_uids",
                                        "onlyLeaf":true,
                                        "multiple": true,
                                        "searchable":true,
                                        "label": "请选择",
                                        "source": "/mapi/schedule/checkoutlists?id=$id"
                                    }
                                ]
                            }
                        }
                    },
                    {
                        "type": "button",
                        "level" : "success",
                        "label" : "结算",
                        "disabledOn": "this.state === 2 || this.order_count === 0",
                        "hiddenOn" : "this.order_count > 1",
                        "actionType": "ajax",
                        "api": {
                            "method": "get",
                            "url": "/mapi/schedule/checkoutsingle?id=$id"
                        }
                    },
                    {
                        "type": "button",
                        "level" : "warning",
                        "label" : "撤销",
                        "disabledOn": "this.state === 1",
                        "hiddenOn" : "this.is_super === 0",
                        "actionType": "ajax",
                        "confirmText": "是否确认撤销操作?",
                        "api": {
                            "method": "get",
                            "url": "/mapi/schedule/revoke?id=$id"
                        }
                    }
                ],
                "toggled": true
            },
            {
                "type": "operation",
                "label": "操作",
                "width": 100,
                "buttons": [
                    {
                        "type": "button",
                        "level" : "primary",
                        "label" : "编辑",
                        "disabledOn": "this.state === 2 || this.is_u !== 1",
                        "actionType": "drawer",
                        "drawer": {
                            "position": "right",
                            "size": "lg",
                            "title": "编辑",
                            "body": {
                                "type": "form",
                                "name": "schedule-edit-form",
                                "api": {
                                    "method": "post",
                                    "url": "/mapi/schedule/update",
                                    "dataType": "form"
                                },
                                "onEvent": {
                                    "click": {
                                        "actions": [
                                            {
                                            "actionType": "reload",
                                            "componentId": "schedule_list"
                                            }
                                        ]
                                    }
                                },
                                "body": [
                                    {
                                        "type": "input-text",
                                        "name": "id",
                                        "label": "id",
                                        "disabled": true
                                    },
                                    {
                                        "type": "tree-select",
                                        "name": "teacher_uid",
                                        "onlyLeaf":true,
                                        "label": "教师",
                                        "initiallyOpen": false,
                                        "size": "full",
                                        "searchable":true,
                                        "value": "${s_t_id}",
                                        "required": true,
                                        "source": "/mapi/column/teacherlists?subject_id=$subject_id"
                                    },
                                    {
                                        "type": "input-date",
                                        "label": "调整日期",
                                        "name": "date",
                                        "value" : "${time_day}",
                                        "required": true,
                                        "onlyLeaf":true
                                    },
                                    {
                                        "type": "input-time-range",
                                        "format":"HH:mm",
                                        "value" : "${time_range}",
                                        "label" : "模板时间",
                                        "onlyLeaf":true,
                                        "required": true,
                                        "name": "time_range"
                                    },
                                    {
                                        "type": "tree-select",
                                        "name": "a_r_id",
                                        "onlyLeaf":true,
                                        "label": "校区教室",
                                        "searchable":true,
                                        "size":"md",
                                        "value": "${a_r_id}",
                                        "initiallyOpen":false,
                                        "source": "/mapi/area/lists?aid=$a_r_id&is_withroom=1"
                                    },
                                    {
                                        "type": "tree-select",
                                        "name": "area_opreator",
                                        "onlyLeaf":true,
                                        "label": "助教",
                                        "searchable":true,
                                        "size":"md",
                                        "initiallyOpen":false,
                                        "value":"${area_operator}",
                                        "source": "/mapi/api/areaoperator",
                                        "description": "助教非必选"
                                    }
                                ]
                            }
                        }
                    },
                    {
                        "type": "button",
                        "level" : "danger",
                        "label" : "删除",
                        "disabledOn": "this.state === 2 || this.is_d !== 1",
                        "actionType": "ajax",
                        "tooltip": "删除",
                        "confirmText": "您确认要删除?",
                        "api": {
                            "method": "get",
                            "url": "/mapi/schedule/delete?id=$id"
                        }
                    }
                ],
                "toggled": true
            }
        ]
    }
}