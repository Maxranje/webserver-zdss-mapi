{
    "type": "page",
    "title": "管理列表",
    "toolbar": [
        {
            "type": "button",
            "actionType": "drawer",
            "label": "新增",
            "className": "m-r-sm",
            "primary": true,
            "drawer": {
                "position": "right",
                "size": "lg",
                "title": "新增",
                "body": {
                    "type": "form",
                    "name": "admin-create-form",
                    "api": {
                        "method": "post",
                        "url": "/mapi/admins/create",
                        "dataType": "form"
                    },
                    "onEvent": {
                        "click": {
                            "actions": [
                                {
                                    "actionType": "reload",
                                    "componentId": "admin_list"
                                }
                            ]
                        }
                    },
                    "body": [
                        {
                            "type": "input-text",
                            "name": "nickname",
                            "label": "昵称",
                            "required": true
                        },
                        {
                            "type": "divider"
                        },
                        {
                            "type": "input-text",
                            "name": "name",
                            "label": "登录名",
                            "required": true
                        },
                        {
                            "type": "divider"
                        },
                        {
                            "type": "input-text",
                            "name": "phone",
                            "label": "手机号",
                            "desc": "6位到12位之间, 手机号会作为账户默认登录密码, 重置密码也是如此",
                            "required": true
                        },
                        {
                            "type": "divider"
                        },
                        {
                            "type": "radios",
                            "name": "type",
                            "label": "类型",
                            "value": "11",
                            "options": [
                                {
                                    "label": "系统管理员",
                                    "value": "11"
                                },
                                {
                                    "label": "合作方管理员",
                                    "value": "10"
                                }
                            ],
                            "required": true
                        },
                        {
                            "type": "divider"
                        },
                        {
                            "type": "tree-select",
                            "name": "birthplace",
                            "onlyLeaf":true,
                            "disabledOn": "type === '11'",
                            "label": "生源地",
                            "searchable":true,
                            "initiallyOpen":false,
                            "source": "/mapi/birthplace/lists?is_select=1",
                            "desc" : "合作方管理员类型才需要配置"
                        }
                    ]
                }
            }
        }
    ],
    "body": {
        "type": "crud",
        "draggable": true,
        "api": {
            "method": "post",
            "url": "/mapi/admins/lists",
            "dataType": "form"
        },
        "perPage": 20,
        "id":"admin_list",
        "syncLocation":false,
        "labelTpl": "${id}",
        "filter": {
            "title": "条件搜索",
            "submitText": "",
            "body": [
                {
                    "type": "input-text",
                    "name": "nickname",
                    "size" : "md",
                    "label": "昵称",
                    "placeholder": "支持模糊搜索"
                },
                {
                    "label": "类型",
                    "type": "select",
                    "name": "type",
                    "size" : "md",
                    "value" : "0",
                    "options": [
                        {
                            "label": "请选择",
                            "value": "0"
                        },
                        {
                            "label": "系统管理员",
                            "value": "11"
                        },
                        {
                            "label": "合作方管理员",
                            "value": "10"
                        }
                    ]
                },
                {
                    "type": "submit",
                    "label": "搜索"
                }
            ]
        },
        "filterTogglable": true,
        "headerToolbar": [
            "filter-toggler",
            "bulkActions",
            {
                "type": "tpl",
                "tpl": "共有 ${total} 条数据。",
                "className": "v-middle"
            },
            {
                "type": "columns-toggler",
                "align": "right"
            },
            {
                "type": "drag-toggler",
                "align": "right"
            },
            {
                "type": "pagination",
                "align": "right"
            }
        ],
        "footerToolbar": [
            "statistics",
            "switch-per-page",
            "pagination"
        ],
        "columns": [
            {
                "name": "uid",
                "label": "UID",
                "type": "text",
                "toggled": true
            },
            {
                "name": "nickname",
                "label": "昵称",
                "type": "text",
                "toggled": true
            },
            {
                "name": "name",
                "label": "登录名",
                "type": "text",
                "toggled": true
            },
            {
                "name": "phone",
                "label": "手机号",
                "type": "text",
                "toggled": true
            },
            {
                "name": "type",
                "label": "状态",
                "type": "mapping",
                "map": {
                    "11": "<span class='label label-info'>系统管理员</span>",
                    "10": "<span class='label label-success'>合作方管理员</span>"
                }
            },
            {
                "name": "birthplace",
                "label": "生源地",
                "type": "text",
                "toggled": true
            },
            {
                "name": "create_time",
                "label": "创建时间",
                "type": "text",
                "toggled": true
            },
            {
                "name": "update_time",
                "label": "修改时间",
                "type": "text",
                "toggled": true
            },
            {
                "type": "operation",
                "label": "操作",
                "width": 180,
                "buttons": [
                    {
                        "type": "button",
                        "label": "编辑",
                        "actionType": "drawer",
                        "drawer": {
                            "position": "right",
                            "size": "lg",
                            "title": "编辑",
                            "body": {
                                "type": "form",
                                "name": "admin-edit-form",
                                "api": {
                                    "method": "post",
                                    "url": "/mapi/admins/update",
                                    "dataType": "form"
                                },
                                "onEvent": {
                                    "click": {
                                        "actions": [
                                            {
                                                "actionType": "reload",
                                                "componentId": "admin_list"
                                            }
                                        ]
                                    }
                                },
                                "body": [
                                    {
                                        "type": "input-text",
                                        "name": "uid",
                                        "label": "Uid",
                                        "disabled": true
                                    },
                                    {
                                        "type": "divider"
                                    },
                                    {
                                        "type": "input-text",
                                        "name": "nickname",
                                        "label": "昵称",
                                        "required": true
                                    },
                                    {
                                        "type": "divider"
                                    },
                                    {
                                        "type": "input-text",
                                        "name": "name",
                                        "label": "登录名",
                                        "required": true
                                    },
                                    {
                                        "type": "divider"
                                    },
                                    {
                                        "type": "input-text",
                                        "name": "phone",
                                        "label": "手机号",
                                        "desc": "6位到12位之间, 只有在创建时候才会设置默认密码为手机号, 修改不会更新密码, 如要同步为手机号, 请重置密码",
                                        "required": true
                                    },
                                    {
                                        "type": "divider"
                                    },
                                    {
                                        "type": "radios",
                                        "name": "type",
                                        "label": "类型",
                                        "value": "11",
                                        "options": [
                                            {
                                                "label": "系统管理员",
                                                "value": "11"
                                            },
                                            {
                                                "label": "合作方管理员",
                                                "value": "10"
                                            }
                                        ],
                                        "required": true
                                    },
                                    {
                                        "type": "divider"
                                    },
                                    {
                                        "type": "tree-select",
                                        "name": "bpid",
                                        "onlyLeaf":true,
                                        "label": "生源地",
                                        "disabledOn": "type === '11'",
                                        "searchable":true,
                                        "initiallyOpen":false,
                                        "source": "/mapi/birthplace/lists?is_select=1",
                                        "desc" : "合作方管理员类型才需要配置"
                                    }
                                ]
                            }
                        }
                    },
                    {
                        "type": "button",
                        "actionType": "ajax",
                        "label": "重置密码",
                        "confirmText": "重置密码后, 账户密码为当前账户填写的手机号!",
                        "api": {
                            "method": "get",
                            "url": "/mapi/api/reset?uid=$uid"
                        }
                    },
                    {
                        "type": "button",
                        "label": "删除",
                        "level": "danger",
                        "actionType": "ajax",
                        "confirmText": "您确认要删除, 管理员类型会删除班级和排课中的区域管理者?  合作方管理员会无法观看生源地信息",
                        "api": {
                            "method": "get",
                            "url": "/mapi/admins/delete?uid=$uid"
                        }
                    }
                ],
                "toggled": true
            }
        ]
    }
}