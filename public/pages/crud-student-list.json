{
    "type": "page",
    "title": "学员管理",
    "toolbar": [
        {
            "type": "button",
            "actionType": "drawer",
            "label": "新增",
            "className" : "m-r-sm",
            "primary": true,
            "drawer": {
                "position": "right",
                "size": "lg",
                "title": "新增",
                "body": {
                    "type": "form",
                    "name": "student-new-form",
                    "api": {
                        "method": "post",
                        "url": "/mapi/student/create",
                        "dataType": "form"
                    },
                    "onEvent": {
                        "click": {
                            "actions": [
                                {
                                "actionType": "reload",
                                "componentId": "student_list"
                                }
                            ]
                        }
                    },
                    "body": [
                        {
                            "type": "input-text",
                            "name": "nickname",
                            "label": "昵称",
                            "required": true
                        },
                        {
                            "type": "divider"
                        },
                        {
                            "type": "input-text",
                            "name": "name",
                            "label": "登录名",
                            "desc": "建议用拼音, 例如昵称:王聪聪 登录名:wang.cc",
                            "required": true
                        },
                        {
                            "type": "divider"
                        },
                        {
                            "type": "input-text",
                            "name": "phone",
                            "label": "手机号",
                            "desc": "6位到12位之间, 手机号会作为账户默认登录密码, 重置密码也是如此",
                            "required": true
                        },
                        {
                            "type": "divider"
                        },
                        {
                            "type": "radios",
                            "name": "sex",
                            "label": "性别",
                            "value": "M",
                            "options": [
                                {
                                    "label": "男",
                                    "value": "M"
                                },
                                {
                                    "label": "女",
                                    "value": "F"
                                }
                            ],
                            "required": true
                        },
                        {
                            "type": "divider"
                        },
                        {
                            "type": "tree-select",
                            "name": "birthplace",
                            "onlyLeaf":true,
                            "label": "生源地",
                            "searchable":true,
                            "initiallyOpen":false,
                            "required" : true,
                            "source": "/mapi/birthplace/lists?is_select=1"
                        },
                        {
                            "type": "divider"
                        },
                        {
                            "type": "input-text",
                            "name": "school",
                            "label": "学校"
                        },
                        {
                            "type": "divider"
                        },
                        {
                            "type": "input-text",
                            "name": "graduate",
                            "label": "学级"
                        },
                        {
                            "type": "divider"
                        },
                        {
                            "type": "tree-select",
                            "name": "sopuid",
                            "onlyLeaf":true,
                            "label": "学管",
                            "searchable":true,
                            "initiallyOpen":false,
                            "source": "/mapi/api/soplists",
                            "required": true
                        }
                    ]
                }
            }
        },
        {
            "type": "button",
            "actionType": "drawer",
            "label": "批量新增",
            "primary": true,
            "drawer": {
                "position": "right",
                "size": "lg",
                "title": "批量新增",
                "body": {
                    "type": "form",
                    "name": "student-new-batch-form",
                    "api": {
                        "method": "post",
                        "url": "/mapi/student/batchcreate",
                        "dataType": "form"
                    },
                    "onEvent": {
                        "click": {
                            "actions": [
                                {
                                "actionType": "reload",
                                "componentId": "student_list"
                                }
                            ]
                        }
                    },
                    "body": [
                        {
                            "type": "input-excel",
                            "name": "excel",
                            "label": "批量上传",
                            "desc":"上传内容不允许有空行和空列, 第一行格式固定: name, phone, nickname, school, birthplace, sex, graduate, (其中 sex 为M或F, 生源地必须配置系统中的id)"
                        }
                    ]
                }
            }
        }
    ],
    "body": {
        "type": "crud",
        "draggable": true,
        "id" : "student_list",
        "api": {
            "method": "post",
            "url": "/mapi/student/lists",
            "dataType": "form"
        },
        "perPage": 20,
        "syncLocation":false,
        "labelTpl": "${uid}",
        "filter": {
            "title": "条件搜索",
            "submitText": "",
            "body": [
                {
                    "type": "input-text",
                    "name": "nickname",
                    "size" : "md",
                    "label": "昵称",
                    "placeholder": "支持模糊搜索"
                },
                {
                    "type": "input-text",
                    "name": "name",
                    "size" : "md",
                    "label": "登录名",
                    "placeholder": "严格搜索"
                },
                {
                    "type": "input-text",
                    "name": "phone",
                    "size" : "md",
                    "label": "手机号",
                    "placeholder": "严格搜索"
                },
                {
                    "type": "tree-select",
                    "name": "sop_uid",
                    "searchable":true,
                    "onlyLeaf":true,
                    "label": "学管",
                    "size":"md",
                    "source": "/mapi/api/soplists"
                },
                {
                    "type": "tree-select",
                    "name": "bpid",
                    "onlyLeaf":true,
                    "label": "生源地",
                    "searchable":true,
                    "size":"md",
                    "initiallyOpen":false,
                    "source": "/mapi/birthplace/lists?is_select=1"
                },
                {
                    "label": "学员状态",
                    "type": "select",
                    "name": "state",
                    "value" : "0",
                    "options": [
                        {
                            "label": "请选择",
                            "value": "0"
                        },
                        {
                            "label": "正常",
                            "value": "1"
                        },
                        {
                            "label": "下线",
                            "value": "2"
                        },
                        {
                            "label": "休眠",
                            "value": "3"
                        },
                        {
                            "label": "完结",
                            "value": "4"
                        }
                    ]
                },
                {
                    "label": "账户余额",
                    "type": "select",
                    "name": "balance_state",
                    "value" : "0",
                    "options": [
                        {
                            "label": "请选择",
                            "value": "0"
                        },
                        {
                            "label": "正常",
                            "value": "1"
                        },
                        {
                            "label": "欠费",
                            "value": "2"
                        }
                    ]
                },
                {
                    "type": "submit",
                    "label": "搜索"
                }
            ]
        },
        "filterTogglable": true,
        "headerToolbar": [
            "filter-toggler",
            "bulkActions",
            {
                "type": "tpl",
                "tpl": "共有 ${total} 条数据。",
                "className": "v-middle"
            },
            {
                "type": "columns-toggler",
                "align": "right"
            },
            {
                "type": "drag-toggler",
                "align": "right"
            },
            {
                "type": "pagination",
                "align": "right"
            }
        ],
        "footerToolbar": [
            "statistics",
            "switch-per-page",
            "pagination"
        ],
        "columns": [
            {
                "name": "uid",
                "label": "UID",
                "type": "text",
                "toggled": true
            },
            {
                "name": "nickname",
                "label": "昵称",
                "type": "text",
                "toggled": true
            },
            {
                "name": "name",
                "label": "登录名",
                "type": "text",
                "toggled": true
            },
            {
                "name": "phone",
                "label": "手机号",
                "type": "text",
                "toggled": true
            },
            {
                "name": "state",
                "label": "状态",
                "type": "mapping",
                "remark" : "休眠/完结状态根据3个月或12个月是否有结算来确定",
                "map": {
                    "4": "<span class='label label-default'>完结</span>",
                    "3": "<span class='label label-danger'>休眠</span>",
                    "2": "<span class='label label-danger'>下线</span>",
                    "1": "<span class='label label-success'>正常</span>"
                }
            },
            {
                "name": "sex",
                "label": "性别",
                "type": "mapping",
                "map": {
                    "M": "男",
                    "F": "女"
                }
            },
            {
                "name": "birthplace",
                "label": "生源地",
                "type": "text",
                "toggled": true
            },
            {
                "name": "school",
                "label": "学校",
                "type": "text",
                "toggled": true
            },
            {
                "name": "graduate",
                "label": "学级",
                "type": "text",
                "toggled": true
            },
            {
                "name": "sop_name",
                "label": "学管",
                "type": "text",
                "toggled": true
            },
            {
                "name": "order_count",
                "label": "订单数量",
                "type": "text",
                "toggled": true
            },
            {
                "name": "balance_info",
                "label": "账户余额",
                "type": "text",
                "toggled": true,
                "classNameExpr": "<%= data.balance > 500000 ? 'bg-success' : (data.balance > 0 ? 'bg-warning' : (data.balance == 0 || data.balance == '***' ? 'bg-default' : 'bg-danger') ) %>"
            },
            {
                "name": "order_balance_info",
                "label": "订单总余额",
                "type": "text",
                "remark" : "订单余额及订单中未结算课程的金额总和",
                "toggled": true
            },
            {
                "name": "total_balance",
                "label": "历史存额",
                "type": "text",
                "toggled": true
            },
            {
                "name": "update_time",
                "label": "更新时间",
                "type": "text",
                "toggled": true
            },
            {
                "type": "operation",
                "label": "操作",
                "width": 220,
                "buttons": [
                    {
                        "type": "button",
                        "label":"订单",
                        "level":"primary",
                        "actionType": "link",
                        "disabledOn": "this.is_partner === 1",
                        "link":"/order/list?student_uid=$uid"
                    },
                    {
                        "type": "button",
                        "label": "充值",
                        "actionType": "dialog",
                        "disabledOn": "this.is_re !== 1 || this.is_partner === 1",
                        "dialog": {
                            "size": "lg",
                            "title": "充值",
                            "body": {
                                "type": "form",
                                "name": "sample-rechage-form",
                                "api": {
                                    "method": "post",
                                    "url": "/mapi/student/recharge",
                                    "dataType": "form"
                                },
                                "onEvent": {
                                    "click": {
                                        "actions": [
                                            {
                                            "actionType": "reload",
                                            "componentId": "student_list"
                                            }
                                        ]
                                    }
                                },
                                "body": [
                                    {
                                        "type": "input-text",
                                        "name": "uid",
                                        "label": "Uid",
                                        "disabled": true
                                    },
                                    {
                                        "type": "divider"
                                    },
                                    {
                                        "type": "input-text",
                                        "name": "nickname",
                                        "label": "昵称",
                                        "disabled": true
                                    },
                                    {
                                        "type": "divider"
                                    },
                                    {
                                        "type": "input-text",
                                        "name": "balance_info",
                                        "label": "账户存额",
                                        "disabled": true,
                                        "addOn": {
                                            "type": "text",
                                            "label": "元"
                                        }
                                    },
                                    {
                                        "type": "divider"
                                    },
                                    {
                                        "type": "tree-select",
                                        "onlyLeaf":true,
                                        "label": "留学与升学服务计划",
                                        "name":"plan",
                                        "searchable":true,
                                        "initiallyOpen":false,
                                        "source": "/mapi/plan/lists?is_select=1",
                                        "onEvent": {
                                            "change": {
                                                "actions": [
                                                    {
                                                        "actionType": "setValue",
                                                        "componentId":"recharge_balance",
                                                        "args": {
                                                            "value": "${SPLIT(event.data.value, '-')[1]}"
                                                        }
                                                    }
                                                ]
                                            }
                                        }
                                    },
                                    {
                                        "type": "divider"
                                    },
                                    {
                                        "type": "input-number",
                                        "name": "recharge_balance",
                                        "id":"recharge_balance",
                                        "label": "充值金额",
                                        "required": true,
                                        "value":0,
                                        "kilobitSeparator" : true,
                                        "suffix": "元",
                                        "desc" : "充值金额, 元为单位, 不能为0"
                                    },
                                    {
                                        "type": "divider"
                                    },
                                    {
                                        "type": "tree-select",
                                        "name": "partner_uid",
                                        "onlyLeaf":true,
                                        "label": "协作人员",
                                        "searchable":true,
                                        "initiallyOpen":false,
                                        "source": "/mapi/api/soplists"
                                    },
                                    {
                                        "type": "divider"
                                    },
                                    {
                                        "type": "input-text",
                                        "name": "remark",
                                        "label": "备注"
                                    }
                                ]
                            }
                        }
                    },
                    {
                        "type": "button",
                        "label": "退款",
                        "actionType": "dialog",
                        "disabledOn": "this.is_rd !== 1 || this.is_partner === 1",
                        "dialog": {
                            "size": "lg",
                            "title": "退款",
                            "body": {
                                "type": "form",
                                "name": "sample-refund-form",
                                "api": {
                                    "method": "post",
                                    "url": "/mapi/student/refund",
                                    "dataType": "form"
                                },
                                "onEvent": {
                                    "click": {
                                        "actions": [
                                            {
                                            "actionType": "reload",
                                            "componentId": "student_list"
                                            }
                                        ]
                                    }
                                },
                                "body": [
                                    {
                                        "type": "alert",
                                        "body": "实际退款金额为退款金额+退款扣款金额, 其中退款金额必须大于0",
                                        "level": "info",
                                        "showCloseButton": true,
                                        "showIcon": true,
                                        "className": "mb-2"
                                    },
                                    {
                                        "type": "input-text",
                                        "name": "uid",
                                        "label": "Uid",
                                        "disabled": true
                                    },
                                    {
                                        "type": "divider"
                                    },
                                    {
                                        "type": "input-text",
                                        "name": "nickname",
                                        "label": "昵称",
                                        "disabled": true
                                    },
                                    {
                                        "type": "divider"
                                    },
                                    {
                                        "type": "input-text",
                                        "name": "balance_info",
                                        "label": "账户存额",
                                        "disabled": true,
                                        "addOn": {
                                            "type": "text",
                                            "label": "元"
                                        }
                                    },
                                    {
                                        "type": "divider"
                                    },
                                    {
                                        "type": "input-number",
                                        "name": "refund_balance",
                                        "label": "退款金额",
                                        "required": true,
                                        "kilobitSeparator" : true,
                                        "suffix": "元",
                                        "desc" : "退款金额, 元为单位, 必须大于0"
                                    },
                                    {
                                        "type": "divider"
                                    },
                                    {
                                        "type": "input-number",
                                        "name": "refund_back_balance",
                                        "label": "退款扣款金额",
                                        "kilobitSeparator" : true,
                                        "suffix": "元",
                                        "desc" : "退款扣款金额, 元为单位"
                                    },
                                    {
                                        "type": "divider"
                                    },
                                    {
                                        "type": "input-text",
                                        "name": "remark",
                                        "label": "备注"
                                    }
                                ]
                            }
                        }
                    },
                    {
                        "type": "button",
                        "label": "编辑",
                        "actionType": "drawer",
                        "disabledOn" : "this.is_partner === 1",
                        "drawer": {
                            "position": "right",
                            "size": "lg",
                            "title": "编辑",
                            "body": {
                                "type": "form",
                                "name": "sample-edit-form",
                                "api": {
                                    "method": "post",
                                    "url": "/mapi/student/update",
                                    "dataType": "form"
                                },
                                "onEvent": {
                                    "click": {
                                        "actions": [
                                            {
                                            "actionType": "reload",
                                            "componentId": "student_list"
                                            }
                                        ]
                                    }
                                },
                                "body": [
                                    {
                                        "type": "input-text",
                                        "name": "uid",
                                        "label": "Uid",
                                        "disabled": true
                                    },
                                    {
                                        "type": "divider"
                                    },
                                    {
                                        "type": "input-text",
                                        "name": "nickname",
                                        "label": "昵称",
                                        "required": true
                                    },
                                    {
                                        "type": "divider"
                                    },
                                    {
                                        "type": "input-text",
                                        "name": "name",
                                        "label": "登录名",
                                        "required": true
                                    },
                                    {
                                        "type": "divider"
                                    },
                                    {
                                        "type": "input-text",
                                        "name": "phone",
                                        "label": "手机号",
                                        "desc": "6位到12位之间, 只有在创建时候才会设置默认密码为手机号, 修改不会更新密码, 如要同步为手机号, 请重置密码",
                                        "required": true
                                    },
                                    {
                                        "type": "divider"
                                    },
                                    {
                                        "type": "radios",
                                        "name": "sex",
                                        "label": "性别",
                                        "value": "{$data.sex}",
                                        "options": [
                                            {
                                                "label": "男",
                                                "value": "M"
                                            },
                                            {
                                                "label": "女",
                                                "value": "F"
                                            }
                                        ],
                                        "required": true
                                    },
                                    {
                                        "type": "divider"
                                    },
                                    {
                                        "type": "radios",
                                        "name": "state",
                                        "label": "状态",
                                        "value": "{$data.state}",
                                        "options": [
                                            {
                                                "label": "正常",
                                                "value": "1"
                                            },
                                            {
                                                "label": "下线",
                                                "value": "2"
                                            }
                                        ],
                                        "required": true
                                    },
                                    {
                                        "type": "divider"
                                    },
                                    {
                                        "type": "tree-select",
                                        "name": "bpid",
                                        "onlyLeaf":true,
                                        "label": "生源地",
                                        "searchable":true,
                                        "initiallyOpen":false,
                                        "required" : true,
                                        "source": "/mapi/birthplace/lists?is_select=1",
                                        "desc": "修改生源地不会影响该学员已有订单中生源地信息(创建订单时学员数据作为依据)"
                                    },
                                    {
                                        "type": "divider"
                                    },
                                    {
                                        "type": "input-text",
                                        "name": "school",
                                        "label": "学校"
                                    },
                                    {
                                        "type": "divider"
                                    },
                                    {
                                        "type": "input-text",
                                        "name": "graduate",
                                        "label": "学级"
                                    },
                                    {
                                        "type": "divider"
                                    },
                                    {
                                        "type": "tree-select",
                                        "name": "sop_uid",
                                        "onlyLeaf":true,
                                        "label": "学管",
                                        "searchable":true,
                                        "initiallyOpen":false,
                                        "source": "/mapi/api/soplists",
                                        "required": true,
                                        "desc": "学管更新会同步更新到排课列表中"
                                    }
                                ]
                            }
                        }
                    },
                    {
                        "type": "button",
                        "label": "备注",
                        "actionType": "dialog",
                        "disabledOn":"this.is_partner === 1",
                        "dialog": {
                            "size": "lg",
                            "title": "备注",
                            "body": {
                                "type": "form",
                                "name": "sample-remark-form",
                                "api": {
                                    "method": "post",
                                    "url": "/mapi/student/remark",
                                    "dataType": "form"
                                },
                                "onEvent": {
                                    "click": {
                                        "actions": [
                                            {
                                            "actionType": "reload",
                                            "componentId": "student_list"
                                            }
                                        ]
                                    }
                                },
                                "body": [
                                    {
                                        "type": "input-text",
                                        "name": "uid",
                                        "label": "Uid",
                                        "disabled": true
                                    },
                                    {
                                        "type": "divider"
                                    },
                                    {
                                        "type": "input-text",
                                        "name": "nickname",
                                        "label": "昵称",
                                        "disabled": true
                                    },
                                    {
                                        "type": "divider"
                                    },
                                    {
                                        "type": "textarea",
                                        "name": "remark",
                                        "disabled": true,
                                        "label": "历史备注",
                                        "maxRows" : 5
                                    },
                                    {
                                        "type": "textarea",
                                        "name": "remark_new",
                                        "label": "新备注",
                                        "desc" : "限定100字内",
                                        "maxRows" : 5,
                                        "maxLength" : 100,
                                        "required": true
                                    }
                                ]
                            }
                        }
                    },                    
                    {
                        "type": "button",
                        "actionType": "ajax",
                        "label": "重置密码",
                        "disabledOn":"this.is_partner === 1",
                        "confirmText": "重置密码后, 账户密码为当前账户填写的手机号!",
                        "api": {
                            "method": "get",
                            "url": "/mapi/api/reset?uid=$uid"
                        }
                    },
                    {
                        "type": "button",
                        "actionType": "ajax",
                        "label": "删除",
                        "level":"danger",
                        "disabledOn":"this.is_partner === 1",
                        "confirmText": "您确认要删除学员么? 如果关联订单无法删除, 建议下线处理!",
                        "api": {
                            "method": "get",
                            "url": "/mapi/student/delete?uid=$uid"
                        }
                    }
                ],
                "toggled": true
            }
        ]
    }
}