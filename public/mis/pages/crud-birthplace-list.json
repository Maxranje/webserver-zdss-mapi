{
    "type": "page",
    "title": "生源地列表",
    "toolbar": [
        {
            "type": "button",
            "actionType": "dialog",
            "label": "新增",
            "className": "m-r-sm",
            "primary": true,
            "dialog": {
                "title": "新增",
                "body": {
                    "type": "form",
                    "name": "birthplace-create-form",
                    "api": {
                        "method": "post",
                        "url": "/mapi/birthplace/create",
                        "dataType": "form"
                    },
                    "onEvent": {
                        "click": {
                            "actions": [
                                {
                                    "actionType": "reload",
                                    "componentId": "birthplace_list"
                                }
                            ]
                        }
                    },
                    "body": [
                        {
                            "type": "input-text",
                            "name": "name",
                            "label": "生源地",
                            "required": true
                        }
                    ]
                }
            }
        }
    ],
    "body": {
        "type": "crud",
        "api": {
            "method": "post",
            "url": "/mapi/birthplace/lists",
            "dataType": "form"
        },
        "perPage": 20,
        "id": "birthplace_list",
        "syncLocation": false,
        "labelTpl": "${id}",
        "filter": {
            "title": "条件搜索",
            "submitText": "",
            "body": [
                {
                    "type": "input-text",
                    "name": "name",
                    "label": "生源地",
                    "size": "md",
                    "placeholder": "模糊匹配"
                },
                {
                    "type": "submit",
                    "label": "搜索"
                }
            ]
        },
        "filterTogglable": true,
        "headerToolbar": [
            "filter-toggler",
            "bulkActions",
            {
                "type": "tpl",
                "tpl": "共有 ${total} 条数据。",
                "className": "v-middle"
            },
            {
                "type": "columns-toggler",
                "align": "right"
            },
            {
                "type": "drag-toggler",
                "align": "right"
            },
            {
                "type": "pagination",
                "align": "right"
            }
        ],
        "footerToolbar": [
            "statistics",
            "switch-per-page",
            "pagination"
        ],
        "columns": [
            {
                "name": "id",
                "label": "ID",
                "type": "text",
                "toggled": true
            },
            {
                "name": "name",
                "label": "生源地",
                "type": "text",
                "toggled": true
            },
            {
                "name": "create_time",
                "label": "创建时间",
                "type": "text",
                "toggled": true
            },
            {
                "name": "update_time",
                "label": "修改时间",
                "type": "text",
                "toggled": true
            },
            {
                "type": "operation",
                "label": "操作",
                "width": 100,
                "buttons": [
                    {
                        "type": "button",
                        "label": "编辑",
                        "level": "info",
                        "actionType": "dialog",
                        "dialog": {
                            "title": "编辑",
                            "body": {
                                "type": "form",
                                "name": "birthplace-edit-form",
                                "api": {
                                    "method": "post",
                                    "url": "/mapi/birthplace/update",
                                    "dataType": "form"
                                },
                                "onEvent": {
                                    "click": {
                                        "actions": [
                                            {
                                                "actionType": "reload",
                                                "componentId": "birthplace_list"
                                            }
                                        ]
                                    }
                                },
                                "body": [
                                    {
                                        "type": "input-text",
                                        "name": "id",
                                        "label": "ID",
                                        "disabled": true
                                    },
                                    {
                                        "type": "divider"
                                    },
                                    {
                                        "type": "input-text",
                                        "name": "name",
                                        "label": "生源地",
                                        "required": true
                                    }
                                ]
                            }
                        }
                    },
                    {
                        "type": "button",
                        "label": "删除",
                        "level": "danger",
                        "actionType": "ajax",
                        "confirmText": "您确认要删除, 删除会同时删掉所有关联学生的生源地信息?",
                        "api": {
                            "method": "get",
                            "url": "/mapi/birthplace/delete?id=$id"
                        }
                    }
                ],
                "toggled": true
            }
        ]
    }
}