{
    "type": "page",
    "title": "校区管理",
    "toolbar": [
        {
            "type": "button",
            "actionType": "drawer",
            "label": "新增校区",
            "className": "m-r-sm",
            "primary": true,
            "drawer": {
                "position": "right",
                "size": "lg",
                "title": "新增",
                "body": {
                    "type": "form",
                    "name": "area-new-form",
                    "api": {
                        "method": "post",
                        "url": "/mapi/area/create",
                        "dataType": "form"
                    },
                    "onEvent": {
                        "click": {
                            "actions": [
                                {
                                    "actionType": "reload",
                                    "componentId": "area_lists"
                                }
                            ]
                        }
                    },
                    "body": [
                        {
                            "type": "input-text",
                            "name": "area_name",
                            "size": "md",
                            "label": "校区名称",
                            "required": true
                        },
                        {
                            "type": "divider"
                        },
                        {
                            "type": "input-text",
                            "name": "room_name",
                            "size": "md",
                            "label": "教室名称",
                            "required": true,
                            "description": "增的校区, 最小需要有一个教室."
                        },
                        {
                            "type": "divider"
                        },
                        {
                            "type": "radios",
                            "name": "is_online",
                            "label": "是否线上",
                            "value": "2",
                            "options": [
                                {
                                    "label": "是",
                                    "value": "1"
                                },
                                {
                                    "label": "否",
                                    "value": "2"
                                }
                            ],
                            "description": "线上校区, 排课时不占用具体教室, 全地域建议只有一个线上校区"
                        }
                    ]
                }
            }
        },
        {
            "type": "button",
            "actionType": "drawer",
            "label": "新增教室",
            "className": "m-r-sm",
            "primary": true,
            "drawer": {
                "position": "right",
                "size": "lg",
                "title": "新增",
                "body": {
                    "type": "form",
                    "name": "room-new-form",
                    "api": {
                        "method": "post",
                        "url": "/mapi/area/roomcreate",
                        "dataType": "form"
                    },
                    "onEvent": {
                        "click": {
                            "actions": [
                                {
                                    "actionType": "reload",
                                    "componentId": "area_lists"
                                }
                            ]
                        }
                    },
                    "body": [
                        {
                            "type": "tree-select",
                            "name": "area_id",
                            "onlyLeaf": true,
                            "searchable": true,
                            "size": "md",
                            "label": "校区",
                            "source": "/mapi/area/lists?is_onlyarea=1",
                            "required": true
                        },
                        {
                            "type": "divider"
                        },
                        {
                            "type": "input-text",
                            "name": "room_name",
                            "size": "md",
                            "label": "教室名称",
                            "required": true
                        }
                    ]
                }
            }
        }
    ],
    "body": {
        "type": "crud",
        "api": {
            "method": "post",
            "url": "/mapi/area/lists",
            "dataType": "form"
        },
        "id": "area_lists",
        "perPageAvailable": [
            10000,
            20000
        ],
        "perPage": 10000,
        "syncLocation": false,
        "labelTpl": "${id}",
        "filterTogglable": true,
        "headerToolbar": [
            "filter-toggler",
            "bulkActions",
            {
                "type": "tpl",
                "tpl": "展示全部数据, 共有 ${total} 条数据。",
                "className": "v-middle"
            },
            {
                "type": "columns-toggler",
                "align": "right"
            },
            {
                "type": "drag-toggler",
                "align": "right"
            }
        ],
        "footerToolbar": [
            "statistics",
            "switch-per-page"
        ],
        "combineNum": 3,
        "columns": [
            {
                "name": "aid",
                "label": "Aid",
                "type": "text",
                "toggled": true
            },
            {
                "name": "area_name",
                "label": "校区名称",
                "type": "text",
                "toggled": true
            },
            {
                "name": "is_online",
                "label": "是否线上",
                "type": "mapping",
                "map": {
                    "2": "<span class='label label-info'>线下课</span>",
                    "1": "<span class='label label-success'>线上课</span>"
                }
            },
            {
                "name": "rid",
                "label": "教室编号",
                "type": "text",
                "toggled": true
            },
            {
                "name": "room_name",
                "label": "教室名称",
                "type": "text",
                "toggled": true
            },
            {
                "name": "area_time",
                "label": "校区更新时间",
                "type": "text",
                "toggled": true
            },
            {
                "name": "room_time",
                "label": "教室更新时间",
                "type": "text",
                "toggled": true
            },
            {
                "type": "operation",
                "label": "操作",
                "width": 100,
                "buttons": [
                    {
                        "type": "button",
                        "label": "编辑",
                        "level": "info",
                        "actionType": "drawer",
                        "drawer": {
                            "position": "right",
                            "size": "lg",
                            "title": "编辑",
                            "body": {
                                "type": "form",
                                "name": "area-edit-form",
                                "api": {
                                    "method": "post",
                                    "url": "/mapi/area/update",
                                    "dataType": "form"
                                },
                                "onEvent": {
                                    "click": {
                                        "actions": [
                                            {
                                                "actionType": "reload",
                                                "componentId": "area_lists"
                                            }
                                        ]
                                    }
                                },
                                "body": [
                                    {
                                        "type": "input-text",
                                        "name": "aid",
                                        "label": "校区ID",
                                        "size": "md",
                                        "disabled": true
                                    },
                                    {
                                        "type": "divider"
                                    },
                                    {
                                        "type": "input-text",
                                        "name": "rid",
                                        "label": "教室ID",
                                        "size": "md",
                                        "disabled": true
                                    },
                                    {
                                        "type": "divider"
                                    },
                                    {
                                        "type": "input-text",
                                        "name": "area_name",
                                        "size": "md",
                                        "label": "校区名称",
                                        "required": true
                                    },
                                    {
                                        "type": "divider"
                                    },
                                    {
                                        "type": "input-text",
                                        "name": "room_name",
                                        "size": "md",
                                        "label": "教室名称",
                                        "required": true
                                    },
                                    {
                                        "type": "divider"
                                    },
                                    {
                                        "type": "radios",
                                        "name": "is_online",
                                        "label": "是否线上",
                                        "options": [
                                            {
                                                "label": "是",
                                                "value": "1"
                                            },
                                            {
                                                "label": "否",
                                                "value": "2"
                                            }
                                        ],
                                        "description": "只针对校区, 不区分教室, 线上校区, 排课时不占用具体教室, 全地域建议只有一个线上校区"
                                    }
                                ]
                            }
                        }
                    },
                    {
                        "type": "button",
                        "label": "删除",
                        "level": "danger",
                        "actionType": "ajax",
                        "confirmText": "您确认要删除, 如果校区没有班级则会删除校区, 同时会删除课程中绑定的房间id和校区id?",
                        "api": {
                            "method": "get",
                            "url": "/mapi/area/delete?rid=$rid&aid=$aid"
                        }
                    }
                ],
                "toggled": true
            }
        ]
    }
}