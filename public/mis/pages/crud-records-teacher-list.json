{
    "type": "page",
    "title": "教师课时",
    "body": [
        {
            "type": "alert",
            "body": "数据实时计算",
            "level": "info",
            "showIcon": true,
            "className": "mb-2"
        },
        {
            "type": "crud",
            "api": {
                "method": "post",
                "url": "/mapi/records/teacherlists",
                "dataType": "form"
            },
            "syncLocation": false,
            "perPageAvailable": [
                100,
                500,
                1000
            ],
            "perPage": 100,
            "id": "records_lists",
            "name": "records_lists",
            "columnsTogglable": false,
            "labelTpl": "${id}",
            "filter": {
                "title": "条件搜索",
                "submitText": "",
                "body": [
                    {
                        "type": "input-text",
                        "name": "nickname",
                        "label": "姓名",
                        "size": "md",
                        "placeholder": ""
                    },
                    {
                        "type": "submit",
                        "label": "搜索"
                    }
                ]
            },
            "filterTogglable": true,
            "headerToolbar": [
                "filter-toggler",
                "bulkActions",
                {
                    "type": "action",
                    "actionType": "download",
                    "label": "导出Excel",
                    "api": "/mapi/records/teacherlists?nickname=${nickname}&is_export=1"
                },
                {
                    "type": "tpl",
                    "tpl": "共有 ${total} 条数据。",
                    "className": "v-middle"
                },
                {
                    "type": "columns-toggler",
                    "align": "right"
                },
                {
                    "type": "drag-toggler",
                    "align": "right"
                },
                {
                    "type": "pagination",
                    "align": "right"
                }
            ],
            "footerToolbar": [
                "statistics",
                "switch-per-page",
                "pagination"
            ],
            "columns": [
                {
                    "name": "nickname",
                    "label": "教师名",
                    "type": "text",
                    "toggled": true
                },
                {
                    "name": "uid",
                    "label": "教师UID",
                    "type": "text",
                    "toggled": true
                },
                {
                    "name": "lm_duration",
                    "label": "上个月课时数",
                    "type": "text",
                    "sortable": true,
                    "toggled": true
                },
                {
                    "name": "cm_duration",
                    "label": "本月课时数",
                    "type": "text",
                    "sortable": true,
                    "toggled": true
                },
                {
                    "name": "nm_duration",
                    "label": "下个月课时数",
                    "type": "text",
                    "sortable": true,
                    "toggled": true
                }
            ]
        }
    ]
}